{
    //"java.compile.nullAnalysis.mode": "automatic"
    "java.configuration.updateBuildConfiguration": "interactive",
  "cucumberautocomplete.steps": [
    "**/*Steps.java"
  ],
  "cucumberautocomplete.syncfeatures": "**/*.feature",
    
  "cucumber.features": [
        "src/test/**/*.feature",
        "features/**/*.feature",
        "tests/**/*.feature",
        "*specs*/**/.feature"
    ],
    
  "cucumber.glue": [
    "src/test/**/*.java",
    "features/**/*.js",
    "features/**/*.jsx",
    "features/**/*.ts",
    "features/**/*.tsx",
    "features/**/*.php",
    "features/**/*.py",
    "tests/**/*.py",
    "tests/**/*.rs",
    "features/**/*.rs",
    "features/**/*.rb",
    "*specs*/**/.cs"
  ]

}